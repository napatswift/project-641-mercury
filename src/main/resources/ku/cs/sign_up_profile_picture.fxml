<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="527.0" prefWidth="601.0" spacing="10.0" stylesheets="@style/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.SignUpProfilePictureController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
         <children>
            <ImageView fx:id="pictureViewIV" fitHeight="150.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@image/media-cup-holder.png" />
               </image>
            </ImageView>
            <Button fx:id="selectProfilePictureBtn" mnemonicParsing="false" onAction="#handleSelectProfilePicture" prefHeight="36.0" prefWidth="210.0" styleClass="outline-btn" text="SELECT PROFILE PICTURE" />
         </children>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </VBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="31.0" prefWidth="441.0" spacing="3.0">
         <children>
            <Button fx:id="confirmBtn1" alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#handleBack" prefHeight="31.0" prefWidth="70.0" styleClass="text-btn" text="CANCEL" />
            <Button fx:id="confirmBtn" alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#handleConfirmBtn" prefHeight="28.0" prefWidth="77.0" styleClass="contained-btn" text="CONFIRM" />
         </children>
         <VBox.margin>
            <Insets left="30.0" right="30.0" top="30.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>
