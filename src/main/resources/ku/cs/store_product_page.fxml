<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" stylesheets="@style/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.StoreProductPageController">

   <children>
      <VBox>
         <children>
            <HBox alignment="BOTTOM_LEFT" spacing="15.0" style="-fx-border-width: 0 0 0.115em 0; -fx-border-color: surface-overlay;">
               <children>
                  <ImageView fx:id="storePictureIV" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@image/media-cup-holder.png" />
                     </image>
                  </ImageView>
                  <Label fx:id="storeNameLabel" styleClass="h6" text="Label" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </HBox>
            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="NEVER">
               <content>
                  <VBox fx:id="containerVBox">
                     <children>
                        <HBox />
                        <FlowPane fx:id="productFlowPane" alignment="TOP_CENTER" hgap="10.0" vgap="10.0">
                           <padding>
                              <Insets bottom="30.0" />
                           </padding>
                        </FlowPane>
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
         <VBox.margin>
            <Insets left="40.0" right="40.0" top="20.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
