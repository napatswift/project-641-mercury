<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" fillHeight="false" stylesheets="@style/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.ResetPasswordController">
   <children>
      <VBox spacing="30.0" styleClass="border-card">
         <children>
            <VBox alignment="TOP_CENTER">
               <children>
                  <ImageView fx:id="userImageView" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="name" styleClass="h6" text="name" />
                  <Label fx:id="userName" styleClass="subtitle2" text="userName" />
               </children>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Old password" />
                  <TextField fx:id="oldPasswordTextField" prefHeight="26.0" prefWidth="286.0" promptText="Old password" />
                  <Label text="New password" />
                  <TextField fx:id="newPasswordTextField" prefHeight="26.0" prefWidth="286.0" promptText="New password" />
                  <Label text="Confirm new password" />
                  <TextField fx:id="confirmNewPasswordTextField" prefHeight="26.0" prefWidth="286.0" promptText="Confirm new password" />
                  <Label fx:id="description" textAlignment="CENTER" />
               </children>
            </VBox>
            <HBox alignment="TOP_RIGHT" spacing="8.0">
               <children>
                  <Button fx:id="holdBackButton" mnemonicParsing="false" text="CANCEL" />
                  <Button fx:id="holdResetPasswordButton" mnemonicParsing="false" onAction="#holdResetPasswordButton" styleClass="contained-btn" text="CONFIRM" />
               </children>
            </HBox>
         </children>
         <HBox.margin>
            <Insets left="20.0" right="20.0" top="20.0" />
         </HBox.margin>
         <padding>
            <Insets bottom="50.0" left="20.0" right="20.0" top="50.0" />
         </padding>
      </VBox>
   </children>
</HBox>
